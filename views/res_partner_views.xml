<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_inspection" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.inspection</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <div name="button_box" position="inside">
                <button name="action_view_machines" type="object" class="oe_stat_button" icon="fa-cogs">
                    <field name="machine_count" widget="statinfo" string="Machines"/>
                </button>

                <button name="action_view_inspections" type="object" class="oe_stat_button" icon="fa-list-alt">
                    <field name="inspection_count" widget="statinfo" string="Inspections"/>
                </button>

                <button name="action_view_certificates" type="object" class="oe_stat_button" icon="fa-certificate">
                    <field name="certificate_count" widget="statinfo" string="Certificates"/>
                </button>

                <button name="action_view_categories" type="object" class="oe_stat_button" icon="fa-tags">
                    <field name="category_count" widget="statinfo" string="Categories"/>
                </button>
            </div>

            <notebook position="inside">

                <page string="Portal Documents" name="portal_documents" icon="fa-folder-open">
                    <field name="inspection_document_ids">
                        <list editable="bottom">
                            <field name="upload_date"/>
                            <field name="name"/>

                            <field name="payment_status"
                                   decoration-danger="payment_status == 'unpaid'"
                                   decoration-warning="payment_status == 'partial'"
                                   decoration-success="payment_status == 'paid'"
                                   decoration-bf="1"
                                   widget="selection"/>

                            <field name="file_name" string="Filename"/>
                            <field name="file" filename="file_name" widget="binary"/>
                        </list>

                        <form>
                            <group>
                                <field name="name"/>
                                <field name="upload_date"/>
                                <field name="payment_status" widget="radio" options="{'horizontal': true}"/>
                                <field name="file_name"/>
                                <field name="file" filename="file_name"/>
                            </group>
                        </form>
                    </field>
                </page>

                <page string="Machines">
                    <field name="machine_ids">
                        <list editable="bottom">
                            <field name="name"/>
                            <field name="serial_number"/>
                            <field name="model_no"/>
                            <field name="category_id"/>
                            <button name="action_create_inspection" string="Inspect" type="object" class="btn-primary"/>
                        </list>
                    </field>
                </page>

                <page string="Categories">
                    <field name="category_ids" readonly="1">
                        <list>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="standard"/>
                        </list>
                    </field>
                </page>

            </notebook>
        </field>
    </record>

    <record id="action_customer_dashboard" model="ir.actions.client">
        <field name="name">Customer Dashboard</field>
        <field name="tag">certification.customer_dashboard_client_action</field>
    </record>

</odoo>