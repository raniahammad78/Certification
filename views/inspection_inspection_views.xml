<odoo>
    <record id="action_inspection_inspection" model="ir.actions.act_window">
        <field name="name">Inspections</field>
        <field name="res_model">inspection.inspection</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_inspection_list" model="ir.ui.view">
        <field name="name">inspection.inspection.list</field>
        <field name="model">inspection.inspection</field>
        <field name="arch" type="xml">
            <list decoration-success="status=='passed'" decoration-danger="status=='failed'">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="machine_id"/>
                <field name="start_date"/>
                <field name="status" widget="badge" decoration-success="status == 'passed'"
                       decoration-danger="status == 'failed'"/>
            </list>
        </field>
    </record>

    <record id="view_inspection_form" model="ir.ui.view">
        <field name="name">inspection.inspection.form</field>
        <field name="model">inspection.inspection</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_pass" string="Mark Passed" type="object" class="oe_highlight"
                            invisible="status != 'draft'"/>
                    <button name="action_fail" string="Mark Failed" type="object" class="btn-danger"
                            invisible="status != 'draft'"/>
                    <button name="action_reset_draft" string="Reset to Draft" type="object"
                            invisible="status == 'draft'"/>
                    <button name="%(action_report_certificate)d" string="Generate Certificate" type="action"
                            class="btn-primary" icon="fa-print" invisible="status != 'passed'"/>
                    <button name="action_download_qr" string="Download QR" type="object" class="btn-secondary"
                            icon="fa-qrcode" invisible="not qr_image"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="location_site" placeholder="Site Address"/>
                            <field name="machine_id"/>
                            <field name="category_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="expire_date"/>
                            <field name="last_inspection_date"/>
                            <field name="inspection_type"/>
                        </group>
                        <group>
                            <field name="inspector_name"/>
                            <field name="inspector_signature" widget="signature"/>
                            <field name="qr_image" invisible="1"/>
                        </group>
                    </group>

                    <group string="Documents Reviewed">
                        <group>
                            <field name="doc_report"/>
                            <field name="doc_maintenance"/>
                            <field name="doc_load_chart"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Inspection Checklist">
                            <field name="line_ids" mode="list">
                                <list editable="bottom" decoration-danger="is_rejected"
                                      decoration-success="is_accepted">
                                    <field name="section" optional="show"/>
                                    <field name="serial_no" string="No."/>
                                    <field name="name"/>
                                    <field name="is_accepted"/>
                                    <field name="is_rejected"/>
                                    <field name="is_na"/>
                                    <field name="comment"/>
                                    <button name="get_formview_action" string="Photo" type="object" icon="fa-camera"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="section"/>
                                        <field name="name"/>
                                        <group col="3">
                                            <field name="is_accepted"/>
                                            <field name="is_rejected"/>
                                            <field name="is_na"/>
                                        </group>
                                        <field name="comment"/>
                                        <field name="recommendation"/>
                                    </group>
                                    <separator string="Evidence Photos"/>
                                    <field name="image_ids" mode="kanban">
                                        <kanban>
                                            <field name="id"/>
                                            <field name="image"/>
                                            <field name="description"/>
                                            <templates>
                                                <t t-name="kanban-box">
                                                    <div class="oe_kanban_global_click border rounded p-2">
                                                        <div class="o_kanban_image">
                                                            <field name="image" widget="image" class="oe_avatar"/>
                                                        </div>
                                                        <div class="oe_kanban_details text-center">
                                                            <small>
                                                                <field name="description"/>
                                                            </small>
                                                        </div>
                                                    </div>
                                                </t>
                                            </templates>
                                        </kanban>
                                        <form>
                                            <group>
                                                <field name="image" widget="image" options="{'size': [200, 200]}"/>
                                                <field name="description"/>
                                            </group>
                                        </form>
                                    </field>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>