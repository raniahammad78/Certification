<odoo>
    <menuitem id="menu_certification_root" name="Certification" sequence="4"/>

    <record id="view_inspection_category_search" model="ir.ui.view">
        <field name="name">inspection.category.search</field>
        <field name="model">inspection.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="standard"/>
                <group expand="0" string="Group By">
                    <filter string="Standard" name="group_standard" context="{'group_by': 'standard'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_inspection_category_kanban" model="ir.ui.view">
        <field name="name">inspection.category.kanban</field>
        <field name="model">inspection.category</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="standard"/>
                <field name="machine_count"/>
                <field name="inspection_count"/>
                <field name="color"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click p-0 position-relative overflow-hidden"
                             style="border-radius: 24px; min-height: 160px; box-shadow: 0 10px 40px rgba(0,0,0,0.05); border: 1px solid rgba(0,0,0,0.05); background: white; transition: transform 0.2s;"
                             onmouseover="this.style.transform='translateY(-5px)'"
                             onmouseout="this.style.transform='translateY(0)'">

                            <div class="position-absolute top-0 start-0 w-100 h-100"
                                 style="background: linear-gradient(135deg, #ffffff 0%, #f3f4f6 100%); z-index: 0;"></div>

                            <i class="fa fa-tags position-absolute text-primary"
                               style="font-size: 140px; opacity: 0.05; right: -30px; bottom: -30px; z-index: 0;"/>

                            <div class="o_dropdown_kanban dropdown position-absolute top-0 end-0 m-3"
                                 style="z-index: 2;">
                                <a class="dropdown-toggle btn btn-sm bg-white shadow-sm rounded-circle"
                                   data-bs-toggle="dropdown" href="#"
                                   style="width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">
                                    <i class="fa fa-ellipsis-h text-muted"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    <a role="menuitem" type="delete" class="dropdown-item text-danger">Delete</a>
                                </div>
                            </div>

                            <div class="d-flex flex-column justify-content-between h-100 p-4 position-relative"
                                 style="z-index: 1;">
                                <div>
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="d-flex align-items-center justify-content-center shadow-sm rounded-4"
                                             style="width: 50px; height: 50px; background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); color: white;">
                                            <i class="fa fa-cube fa-lg"/>
                                        </div>
                                    </div>
                                    <h3 class="fw-bold text-dark mb-1" style="font-size: 20px; letter-spacing: -0.5px;">
                                        <field name="name"/>
                                    </h3>
                                    <div class="text-muted small text-truncate fw-semibold opacity-75">
                                        <field name="standard"/>
                                    </div>
                                </div>

                                <div class="mt-4 pt-2">
                                    <div class="d-flex gap-2">
                                        <div class="px-3 py-2 rounded-pill d-flex align-items-center bg-white shadow-sm border">
                                            <i class="fa fa-hdd-o text-warning me-2"/>
                                            <span class="fw-bold text-dark me-1">
                                                <field name="machine_count"/>
                                            </span>
                                            <span class="text-muted small" style="font-size: 10px; font-weight: 700;">
                                                MACHINES
                                            </span>
                                        </div>
                                        <div class="px-3 py-2 rounded-pill d-flex align-items-center bg-white shadow-sm border">
                                            <i class="fa fa-check-circle text-success me-2"/>
                                            <span class="fw-bold text-dark me-1">
                                                <field name="inspection_count"/>
                                            </span>
                                            <span class="text-muted small" style="font-size: 10px; font-weight: 700;">
                                                REPORTS
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_inspection_category_form" model="ir.ui.view">
        <field name="name">inspection.category.form</field>
        <field name="model">inspection.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_machines"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-cogs">
                            <field name="machine_count" widget="statinfo" string="Machines"/>
                        </button>
                        <button name="action_view_inspections"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-list-alt">
                            <field name="inspection_count" widget="statinfo" string="Inspections"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only text-muted"/>
                        <h1>
                            <field name="name" placeholder="e.g. Scissor Lift"/>
                        </h1>
                        <h4 class="text-muted">
                            <field name="standard" placeholder="e.g. ISO 12345 / BS EN 280"/>
                        </h4>
                    </div>

                    <group>
                        <field name="description" placeholder="Description of this machine category..."/>
                    </group>

                    <notebook>
                        <page string="Checklist Template">
                            <field name="question_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="section" placeholder="Section (e.g. Hydraulics)"/>
                                    <field name="serial_no" placeholder="#"/>
                                    <field name="name" placeholder="Enter question text here..."/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_inspection_category_list" model="ir.ui.view">
        <field name="name">inspection.category.list</field>
        <field name="model">inspection.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="standard"/>
                <field name="description" optional="hide"/>
                <field name="machine_count" widget="badge" decoration-info="machine_count > 0"/>
                <field name="inspection_count" widget="badge" decoration-success="inspection_count > 0"/>
            </list>
        </field>
    </record>

    <record id="action_inspection_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">inspection.category</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Inspection Category
            </p>
            <p>
                Define categories (e.g. Forklifts) and their standard checklist templates here.
            </p>
        </field>
    </record>

    <record id="action_certification_dashboard" model="ir.actions.client">
        <field name="name">Dashboard</field>
        <field name="tag">certification.dashboard_client_action</field>
    </record>

    <menuitem id="menu_certification_dashboard"
              name="Dashboard"
              parent="menu_certification_root"
              action="action_certification_dashboard"
              sequence="0"/>

    <menuitem id="menu_certification_customers"
              name="Customers"
              parent="menu_certification_root"
              action="action_customer_dashboard"
              sequence="1"/>

    <menuitem id="menu_inspection_category"
              name="Categories"
              parent="menu_certification_root"
              action="action_inspection_category"
              sequence="2"/>
</odoo>