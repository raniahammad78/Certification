<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_inspection_machine_search" model="ir.ui.view">
        <field name="name">inspection.machine.search</field>
        <field name="model">inspection.machine</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="serial_number"/>
                <field name="partner_id"/>
                <field name="category_id"/>
                <group expand="0" string="Group By">
                    <filter string="Client" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_inspection_machine_kanban" model="ir.ui.view">
        <field name="name">inspection.machine.kanban</field>
        <field name="model">inspection.machine</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="partner_id"/>
                <field name="next_inspection_date"/>
                <field name="inspection_count"/>
                <field name="color"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click p-0 position-relative overflow-hidden"
                             style="border-radius: 24px; min-height: 170px; box-shadow: 0 10px 40px rgba(0,0,0,0.05); border: 1px solid rgba(0,0,0,0.05); background: white; transition: transform 0.2s;"
                             onmouseover="this.style.transform='translateY(-5px)'"
                             onmouseout="this.style.transform='translateY(0)'">

                            <div class="position-absolute top-0 start-0 w-100 h-100"
                                 style="background: linear-gradient(135deg, #ffffff 0%, #f0f9ff 100%); z-index: 0;"></div>

                            <i class="fa fa-cogs position-absolute"
                               style="font-size: 140px; opacity: 0.05; right: -30px; bottom: -30px; z-index: 0; color: #0891b2;"/>

                            <div class="o_dropdown_kanban dropdown position-absolute top-0 end-0 m-3"
                                 style="z-index: 2;">
                                <a class="dropdown-toggle btn btn-sm bg-white shadow-sm rounded-circle"
                                   data-bs-toggle="dropdown" href="#"
                                   style="width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">
                                    <i class="fa fa-ellipsis-h text-muted"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    <a role="menuitem" type="delete" class="dropdown-item text-danger">Delete</a>
                                </div>
                            </div>

                            <div class="d-flex flex-column justify-content-between h-100 p-4 position-relative"
                                 style="z-index: 1;">

                                <div>
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="d-flex align-items-center justify-content-center shadow-sm rounded-4"
                                             style="width: 50px; height: 50px; background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%); color: white;">
                                            <i class="fa fa-truck fa-lg"/>
                                        </div>
                                        <div class="ms-3">
                                            <div class="text-muted small fw-bold text-uppercase"
                                                 style="font-size: 10px;">Serial No.
                                            </div>
                                            <div class="text-dark fw-bold small">
                                                <field name="serial_number"/>
                                            </div>
                                        </div>
                                    </div>

                                    <h3 class="fw-bold text-dark mb-1 text-truncate"
                                        style="font-size: 18px; letter-spacing: -0.5px;">
                                        <field name="name"/>
                                    </h3>

                                    <div class="d-flex align-items-center mt-1">
                                        <i class="fa fa-user-circle text-muted me-2"/>
                                        <span class="text-muted small fw-semibold text-truncate">
                                            <field name="partner_id"/>
                                        </span>
                                    </div>
                                </div>

                                <div class="mt-4 pt-2">
                                    <div class="d-flex gap-2">
                                        <div class="px-3 py-2 rounded-pill d-flex align-items-center bg-white shadow-sm border"
                                             title="Next Inspection Date">
                                            <i class="fa fa-calendar-o text-primary me-2"/>
                                            <span class="fw-bold text-dark me-1" style="font-size: 11px;">
                                                <field name="next_inspection_date" widget="remaining_days"/>
                                            </span>
                                        </div>

                                        <div class="px-3 py-2 rounded-pill d-flex align-items-center bg-white shadow-sm border"
                                             title="Total Inspections">
                                            <i class="fa fa-list-alt text-success me-2"/>
                                            <span class="fw-bold text-dark me-1">
                                                <field name="inspection_count"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_inspection_machine_form" model="ir.ui.view">
        <field name="name">inspection.machine.form</field>
        <field name="model">inspection.machine</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_inspections" type="object" class="oe_stat_button" icon="fa-list-alt">
                            <field name="inspection_count" widget="statinfo" string="Inspections"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. Scissor Lift 20m"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="category_id"/>
                            <field name="manufacturer"/>
                            <field name="owner_id_no"/>
                        </group>
                        <group>
                            <field name="serial_number"/>
                            <field name="model_no"/>
                            <field name="swl"/>
                            <field name="build_year"/>
                        </group>
                    </group>

                    <group string="Subscription &amp; Auto-Scheduling">
                        <group>
                            <field name="recurring_inspection" widget="boolean_toggle"/>
                            <field name="inspection_interval" invisible="not recurring_inspection"
                                   required="recurring_inspection"/>
                        </group>
                        <group>
                            <field name="next_inspection_date" invisible="not recurring_inspection"
                                   required="recurring_inspection"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Machine Specific Questions">
                            <field name="custom_question_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="section"/>
                                    <field name="serial_no"/>
                                    <field name="name"/>
                                    <field name="is_accepted"/>
                                    <field name="is_rejected"/>
                                    <field name="is_na"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_inspection_machine_list" model="ir.ui.view">
        <field name="name">inspection.machine.list</field>
        <field name="model">inspection.machine</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="manufacturer"/>
                <field name="model_no"/>
                <field name="category_id"/>
                <field name="next_inspection_date" optional="show" widget="remaining_days"/>
                <field name="inspection_count" optional="show"/>
            </list>
        </field>
    </record>

    <record id="action_inspection_machine" model="ir.actions.act_window">
        <field name="name">Machines</field>
        <field name="res_model">inspection.machine</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <record id="action_machine_dashboard" model="ir.actions.client">
        <field name="name">Fleet Dashboard</field>
        <field name="tag">certification.machine_dashboard_client_action</field>
    </record>

    <menuitem id="menu_inspection_machine"
              name="Machines"
              parent="menu_certification_root"
              action="action_inspection_machine"
              sequence="20"/>
</odoo>