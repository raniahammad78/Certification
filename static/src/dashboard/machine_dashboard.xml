<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="certification.MachineDashboard" owl="1">
        <div class="o_inspection_dashboard h-100 overflow-auto bg-100">
            <div class="d-flex align-items-center justify-content-between p-3 bg-white border-bottom shadow-sm">
                <h2 class="text-primary fw-bold m-0"><i class="fa fa-truck me-2"/>Machine Fleet Dashboard</h2>
                <button class="btn btn-primary" t-on-click="viewAllMachines"><i class="fa fa-list me-1"/>
                    View List</button>
            </div>

            <div class="container-fluid p-4">
                <div class="row g-4 mb-4">
                    <div class="col-md-3"><div class="card shadow-sm border-0 h-100"><div class="card-body text-center"><h6 class="text-muted">TOTAL</h6><h2
                            class="fw-bold"><t t-esc="state.kpi.total"/></h2></div></div></div>
                    <div class="col-md-3"><div class="card shadow-sm border-0 h-100"><div class="card-body text-center"><h6 class="text-muted">COMPLIANT</h6><h2
                            class="fw-bold text-success"><t t-esc="state.kpi.compliant"/></h2></div></div></div>
                    <div class="col-md-3"><div class="card shadow-sm border-0 h-100"><div class="card-body text-center"><h6 class="text-muted">NON-COMPLIANT</h6><h2
                            class="fw-bold text-danger"><t t-esc="state.kpi.non_compliant"/></h2></div></div></div>
                    <div class="col-md-3"><div class="card shadow-sm border-0 h-100"><div class="card-body text-center"><h6 class="text-muted">MANUFACTURERS</h6><h2
                            class="fw-bold text-info"><t t-esc="state.kpi.manufacturers"/></h2></div></div></div>
                </div>

                <div class="row g-4 mb-4">
                    <div class="col-lg-8"><div class="card shadow-sm h-100"><div class="card-body"><canvas t-ref="chart_category"/></div></div></div>
                    <div class="col-lg-4"><div class="card shadow-sm h-100"><div class="card-body"><canvas t-ref="chart_manufacturer"/></div></div></div>
                </div>

                <div class="row g-4">
                    <div class="col-12">
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-white fw-bold text-danger">Action Required (Non-Compliant)</div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="bg-light"><tr><th>Name</th><th>Serial</th><th>Manufacturer</th><th>Customer</th></tr></thead>
                                        <tbody>
                                            <tr t-foreach="state.lists.non_compliant" t-as="m" t-key="m.id"
                                                t-on-click="() => this.openMachine(m.id)" style="cursor: pointer;">
                                                <td class="fw-bold text-primary"><t t-esc="m.name"/></td>
                                                <td><t t-esc="m.serial"/></td>
                                                <td><t t-esc="m.manufacturer"/></td>
                                                <td><t t-esc="m.partner"/></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>